</head>
<body>
    
<% if (messages.error) { %>
  <%=messages.error%>
<% } %>
<div id="container">
<form action="/login" method="POST">
  
    <h1>Login</h1>
  <div class="campo">
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required>
  </div>
  <div class="campo">
    <label for="password">Password</label>
    <input class=".input-block" type="password" id="password" name="password" required>
  </div>
  <button type="submit">Entrar</button>
</form>
